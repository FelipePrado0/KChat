# Porta do servidor backend
PORT=3000

# Ambiente de execução (development, production)
NODE_ENV=development

# Chave secreta para assinar os tokens JWT (NUNCA compartilhe publicamente!)
JWT_SECRET=sua_chave_super_secreta_aqui

# Tempo de expiração do token JWT
JWT_EXPIRES_IN=24h

# Caminho do banco de dados SQLite
DB_PATH=./db/database.sqlite

# Quantidade de rounds do bcrypt para hash de senha (quanto maior, mais seguro e mais lento)
BCRYPT_ROUNDS=12

# Configurações de rate limiting (opcional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100